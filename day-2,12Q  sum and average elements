#include <stdio.h>

int main() {
   int arr[10], i, n;
   float sum = 0, avg;

   printf("Enter the number of elements in the array: ");
   scanf("%d", &n);

   printf("Enter the elements of the array: \n");

   for (i = 0; i < n; i++) {
      scanf("%d", &arr[i]);
      sum += arr[i];
   }

   avg = sum / n;

   printf("The sum of the elements in the array is: %.2f\n", sum);
   printf("The average of the elements in the array is: %.2f\n", avg);

   return 0;
}
